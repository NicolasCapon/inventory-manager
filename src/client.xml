<input id="input" type="text" x="1" y="1" width="parent.w - 4" height="1" bg="white" onChange="filterList" onKey="navigation"/>
<input id="countInput" type="number" x="parent.w - 3" y="1" width="4" height="1" bg="cyan" onKey="navigation" limit="3"/>
<list id="itemsList" x="1" y="2" width="parent.w" height="parent.h - 3" scrollable="true" bg="pink" onKey="navigation"/>
<button id="getButton" onClick="getSelectedItem" text="GET" x="parent.w - 9" y="parent.h - 1" width="10" height="1" bg="green"/>
<button id="dumpButton" onClick="dump" text="DUMP" x="parent.w - 19" y="parent.h - 1" width="10" height="1" bg="red"/>
<button id="learnButton" onClick="learnRecipe" text="LEARN" x="parent.w - 29" y="parent.h - 1" width="10" height="1" bg="cyan"/>
<button id="refreshButton" onClick="refresh" text="REFRESH" x="parent.w - 39" y="parent.h - 1" width="10" height="1" bg="gray"/>
